{
  "name": "laf-toolkit",
  "displayName": "laf toolkit",
  "description": "laf 云开发本地化开发插件，结合 Git 使用更佳！",
  "version": "0.0.1",
  "author": "NightWhite",
  "publisher": "NightWhite",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nightwhite/laf-toolkit.git"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "keywords": [
    "laf",
    "lafjs",
    "toolkit"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:typescript",
    "workspaceContains:**/*.ts",
    "onView:laf-toolkit",
    "*"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\""
  },
  "contributes": {
    "commands": [
      {
        "command": "laf-toolkit.user.login",
        "title": "laf1:登录"
      },
      {
        "command": "laf-toolkit.system.init",
        "title": "laf1:初始化环境"
      },
      {
        "command": "laf-toolkit.funcs.pushAll",
        "title": "laf1:发布全部云函数"
      },
      {
        "command": "laf-toolkit.funcs.pullAll",
        "title": "laf1:下载全部云函数"
      },
      {
        "command": "laf-toolkit.funcs.exec",
        "title": "laf1:直接运行本函数"
      },
      {
        "command": "laf-toolkit.funcs.pull",
        "title": "laf1:下载本函数",
        "icon": "$(tools)"
      },
      {
        "command": "laf-toolkit.funcs.push",
        "title": "laf1:发布本函数",
        "icon": "$(tools)"
      },
      {
        "command": "laf-toolkit.funcs.depSync",
        "title": "laf1:同步线上依赖"
      },
      {
        "command": "laf-toolkit.funcs.addFunc",
        "title": "laf1:新增云函数"
      },
      {
        "command": "laf-toolkit.views.funcs.right-click.push",
        "title": "发布云函数"
      },
      {
        "command": "laf-toolkit.views.funcs.right-click.changeName",
        "title": "修改云函数名"
      },
      {
        "command": "laf-toolkit.views.funcs.right-click.pull",
        "title": "拉取最新云函数"
      },
      {
        "command": "laf-toolkit.views.funcs.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "laf-toolkit.views.funcs.right-click.del",
        "title": "删除云函数"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourcePath =~ /[\\/\\\\]laf-cloud[\\/\\\\]functions(?:[\\/\\\\][^\\/\\\\]+)*[\\/\\\\][^\\/\\\\]+\\.ts$/i",
          "command": "laf-toolkit.funcs.pull",
          "group": "laf-cli"
        },
        {
          "when": "resourcePath =~ /[\\/\\\\]laf-cloud[\\/\\\\]functions(?:[\\/\\\\][^\\/\\\\]+)*[\\/\\\\][^\\/\\\\]+\\.ts$/i",
          "command": "laf-toolkit.funcs.push",
          "group": "laf-cli"
        }
      ],
      "view/title": [
        {
          "command": "laf-toolkit.views.funcs.refresh",
          "when": "view == laf-toolkit.views.funcs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "laf-toolkit.views.funcs.right-click.push",
          "when": "viewItem == fileItem"
        },
        {
          "command": "laf-toolkit.views.funcs.right-click.changeName",
          "when": "viewItem == fileItem"
        },
        {
          "command": "laf-toolkit.views.funcs.right-click.pull",
          "when": "viewItem == fileItem"
        },
        {
          "command": "laf-toolkit.views.funcs.right-click.del",
          "when": "viewItem == fileItem"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "laf-toolkit",
          "title": "Laf 云开发插件",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "laf-toolkit": [
        {
          "id": "laf-toolkit.views.funcs",
          "name": "云函数",
          "visibility": "visible"
        },
        {
          "id": "laf-toolkit.views.database",
          "name": "数据库",
          "visibility": "visible"
        },
        {
          "id": "laf-toolkit.views.storage",
          "name": "云存储",
          "visibility": "collapsed"
        },
        {
          "id": "laf-toolkit.views.debug",
          "name": "调试"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "laf-toolkit.views.database",
        "contents": "尚未登录到 Laf API Server，请登录后再查看.\n[登录](command:laf-toolkit.user.login)",
        "enablement": "laf-toolkit.app.init"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.26.0",
    "ts-loader": "^7.0.5",
    "typescript": "^5.3.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
